{
	"name": "lucene-query-formatter",
	"displayName": "Lucene Query Formatter",
	"description": "Indent Lucene query object strings for better readability.",
	"publisher": "nishantns19",
	"icon": "images/icon.png",
	"version": "1.1.2",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Formatters"
	],
	"keywords": [
		"Lucene","Query","Indent","Format"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "query-formatter.start",
				"title": "Format Query"
			}
		],
        "keybindings": [
            {
                "command": "query-formatter.start",
                "key": "shift+ctrl+i",
                "mac": "shift+cmd+i"
            }
        ]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nishant-ns19/query-formatter"
	  }
}
